<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project name="com.adenon.sdf.ant.tasks" basedir=".">

	<path id="lib.ant.path">
		<fileset dir="${master.dir}/sp-builder/resources/ant">
			<include name="**/*.jar" />
		</fileset>
	</path>

	<taskdef name="version.changer" classname="com.adenon.ant.task.version.VersionChanger" classpathref="lib.ant.path" />
	<taskdef name="version.file" classname="com.adenon.ant.task.version.Version" classpathref="lib.ant.path" />
	<taskdef name="version.info" classname="com.adenon.ant.task.version.VersionInfo" classpathref="lib.ant.path" />
	<taskdef name="build.from.file" classname="com.adenon.ant.task.version.BuildFromFile" classpathref="lib.ant.path" />
	<taskdef name="build.from.xml" classname="com.adenon.ant.task.version.BuildFromXML" classpathref="lib.ant.path" />

</project>